---
import data from '../data/timeline';
import Shell from '../layouts/Shell.astro'
---

<Shell frontmatter={{title: 'PSO2:NGS Lore Timeline', description: 'Timeline of PSO2:NGS events'}} >
  <div class="mx-auto p-4 mb-12 max-w-3xl">
    <div class="mb-8 max-w-prose mx-auto">
      <h1 class="font-bold text-3xl mb-2">PSO2:NGS Lore Timeline</h1>
      <p class="font-semibold text-2xl mb-1">Timeline of PSO2:NGS events</p>
      <p>Summary by Lore Expert <a class="link font-semibold text-lg" href="https://twitter.com/RollChroll" target="_blank">@RollChroll</a></p>
      <sub>last updated April 26, 2023</sub>
    </div>
    <div class="mb-4">
      <ol class="flex gap-4 flex-col">
        {
          data.map((item,index) => (
            <li id={index.toString()} class="rounded-xl w-full bg-base-200 p-6 scroll-m-4">
              <a href={`#${index}`}>
              <h2 class="font-bold text-2xl mb-2 link-hover">{item.When}</h2>
              </a>
                <h2 class="font-semibold whitespace-pre-wrap text-lg">{item.Event}</h2>
              {item.Notes ? (
                <hr class="border-b-1 border-base-content my-4" />
                <ul class="list-disc list-inside flex flex-col gap-2">
                  {item.Notes.map(note => (
                    <li>{note}</li>
                  ))}
                </ul>
              ) : (
                ''
              )}
            </li>
          ))
        }
      </ol>
    </div>
    <sub>* estimated time from context.</sub>
  </div>
</Shell>